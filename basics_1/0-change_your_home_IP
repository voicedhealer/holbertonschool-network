#!/usr/bin/env bash
# This script configures an Ubuntu server to change local DNS resolution
# localhost resolves to 127.0.0.2
# facebook.com resolves to 8.8.8.8

# Create a backup of the original hosts file
sudo cp /etc/hosts /etc/hosts.backup

# Remove any existing entries for localhost and facebook.com to avoid conflicts
sudo sed -i '/localhost/d' /etc/hosts
sudo sed -i '/facebook.com/d' /etc/hosts

# Add the required DNS resolution entries
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts
